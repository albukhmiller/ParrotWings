<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_toolbar"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    android:theme="@style/AppTheme"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnSearchBack"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="4dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edSearchUser"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="60dp"
            android:hint="Имя получателя"
            android:maxLength="10"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelTextColor="@android:color/white"
            app:met_floatingLabelTextSize="12sp"
            app:met_primaryColor="@android:color/white"
            app:met_textColor="@android:color/white"
            app:met_textColorHint="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnSendMoney"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.Toolbar>