<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alex.parrotwings">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentations.ui.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".presentations.ui.activities.PrimaryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentations.ui.activities.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentations.ui.activities.AccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentations.ui.activities.TransactionActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>